                    th(scope="col", class="text-center") id
                    th(scope="col", class="text-center") Producto 
                    th(scope="col", class="text-center") Imagen
                    th(scope="col", class="text-center") Precio 
            tbody
                block anexo
        div(style="border-radius: 10px; border: 1px solid rgb(147, 147, 206); padding: 30px; width: 60vw; margin-left: 5vw;")     
            h3(class="text-center") Agregar producto 
            form(action="/productos" method="POST")
                div(class="container row"  style="display: flex; align-items: center;")
                    div(class="col-3")
                        label(class="form-label") TÃ­tulo
                        input(type="text" class="form-control" placeholder="Ingrese titulo" name="title")
                    div(class="col-3")
                        label(class="form-label") Precio               
                        input(type="text" class="form-control" placeholder="Ingrese precio" name="price")
                    div(class="col-3")
                        label(class="form-label") Imagen 
                        input(type="text" class="form-control" placeholder="Ingrese miniatura" name="thumbnail")
                    button(type="submit" class="btn btn-primary  offset-1 col-2" style="height: 40px; margin-top: 10px;") Guardar
